    "start": "node dist/index.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "esbuild": "^0.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}



